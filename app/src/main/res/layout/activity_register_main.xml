        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/code_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/register_code"
                android:inputType="number"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/obtain_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/register_code_obtain"/>

        </LinearLayout>

        <android.letus179.com.givemefive.edit.ClearEditText
            android:id="@+id/pwd_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/register_pwd"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="@color/hint_color"
            android:textSize="16sp"/>

        <android.letus179.com.givemefive.edit.ClearEditText
            android:id="@+id/pwd_text_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/register_pwd_again"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="@color/hint_color"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/register_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_complete"
            android:textColor="@color/button_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/agree_protocol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/register_tip"/>

            <TextView
                android:id="@+id/register_protocol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/register_protocol"
                android:textColor="@color/login_tip"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>